{
  "name": "archsentinel",
  "displayName": "ArchSentinel",
  "description": "Visualize dependencies, detect cycles, and protect your software architecture in real time.",
  "icon": "icon.png",
  "keywords": [
    "architecture",
    "clean architecture",
    "visualization",
    "graph",
    "linter",
    "typescript",
    "dart"
  ],
  "version": "1.0.0",
  "publisher": "Crisiszzz07-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Crisiszzz07/archsentinel-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Linters",
    "Visualization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "archsentinel.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "archsentinel.showProblems",
        "title": "Show Architecture Problems"
      },
      {
        "command": "archsentinel.showGraph",
        "title": "ArchSentinel: Show Architecture Graph"
      },
      {
        "command": "archsentinel.init",
        "title": "ArchSentinel: Init / Auto-Detect"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "arch-rules.json",
        "url": "./schemas/arch-rules.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}