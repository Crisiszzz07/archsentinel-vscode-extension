{
  "name": "archsentinel",
  "displayName": "ArchSentinel",
  "description": "Clean Architecture Linter",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "archsentinel.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "archsentinel.showProblems",
        "title": "Show Architecture Problems"
      },
      {
        "command": "archsentinel.showGraph",
        "title": "ArchSentinel: Show Architecture Graph"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "arch-rules.json",
        "url": "./schemas/arch-rules.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}