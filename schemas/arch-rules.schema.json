{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ArchSentinel Rules",
    "description": "Configuration for ArchSentinel Clean Architecture Linter",
    "type": "object",
    "properties": {
        "rules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "scope": {
                        "type": "string",
                        "description": "Regex pattern to match the file path where this rule applies."
                    },
                    "forbidden": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "List of Regex patterns for forbidden import paths."
                    },
                    "message": {
                        "type": "string",
                        "description": "Error message to display when a violation is found."
                    }
                },
                "required": [
                    "scope",
                    "forbidden",
                    "message"
                ]
            }
        }
    },
    "required": [
        "rules"
    ]
}